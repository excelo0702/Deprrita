<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".See_Video"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/comment_section"

        >

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/video_adapter_title_see"></TextView>


            <VideoView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                android:id="@+id/video_view_item_see"></VideoView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21035"
                android:id="@+id/video_views_see"
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:gravity="fill_horizontal"
                android:padding="10dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:textSize="20dp"
                    android:id="@+id/video_likess_see"
                    android:layout_marginRight="15dp"
                    android:text="21"
                    ></TextView>


                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:id="@+id/video_likes_see"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/ic_thumb_up"
                    app:srcCompat="@drawable/ic_thumb_up"
                    ></ImageButton>


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/video_downvote_see"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/ic_thumb_down_black_24dp"
                    ></ImageButton>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/video_share_see"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    android:layout_marginLeft="15dp"
                    ></ImageView>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/favorite_comment_see"
                    android:layout_marginLeft="18dp"
                    app:srcCompat="@drawable/ic_add_to_favorite"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:textSize="16dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/video_commentt_see"
                    android:text="Add to Favorite"
                    ></TextView>


            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_gravity="center"
                ></TextView>

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/Chat_button"
        android:src="@drawable/ic_explore"
        ></com.google.android.material.floatingactionbutton.FloatingActionButton>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/comment_section"
        android:layout_above="@id/layout_below"
        android:layout_marginBottom="5dp"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:id="@+id/comments"
        ></androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layout_below"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.3"
                android:id="@+id/select_image_content"
                android:src="@drawable/ic_camera"></ImageView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="#FFFFFF"
                android:text="Enter YOur Comment"
                android:id="@+id/comment_message"
                ></EditText>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/send_comment"
                android:layout_weight="0.3"
                android:src="@drawable/ic_send_black_24dp"></ImageView>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>