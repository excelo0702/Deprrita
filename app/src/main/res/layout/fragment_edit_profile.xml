<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Profile.edit_profile"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_username"
        android:id="@+id/ProfileImage"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        ></ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_username"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></ImageView>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/user_name_profile"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></EditText>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:layout_marginRight="10dp"
            android:id="@+id/change_userName"
            android:layout_marginLeft="10dp"
            ></ImageView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_about1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></ImageView>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#000000"
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:id="@+id/user_decription_profile"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></EditText>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:id="@+id/change_userAbout"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></ImageView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_email_black_24dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></ImageView>

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/user_email_profile"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></ImageView>

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="20dp"
            android:textColor="#000000"
            android:inputType="numberSigned"
            android:id="@+id/user_phone_profile"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></TextView>


    </LinearLayout>



</LinearLayout>