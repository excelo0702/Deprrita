<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Dashboard.dashboard">



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smurfooo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/user_dashboard_profile"
        ></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/user_dashboard_profile"
        android:id="@+id/user_dashboard_name"
        android:layout_marginTop="15dp"
        ></TextView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_badge"
        android:layout_toRightOf="@id/user_dashboard_profile"
        android:layout_below="@id/user_dashboard_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"

        android:id="@+id/user_dashboard_badge"
        ></ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|Points"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/user_dashboard_badge"
        android:layout_below="@id/user_dashboard_name"
        android:id="@+id/user_dashboard_points"
        android:layout_marginTop="15dp"
        ></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/user_dashboard_learder_card"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_dashboard_learder"
            android:text="Leaderboard"
            ></Button>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:id="@+id/user_dashboard_history_card"
        android:layout_below="@id/user_dashboard_learder_card">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard"
            android:text="History"
            ></Button>

    </androidx.cardview.widget.CardView>

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ProgressBar
        android:id="@+id/progress_bar_chart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/user_dashboard_profile"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        />


    <ProgressBar
        android:id="@+id/progress_bar_chart2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/user_dashboard_profile"
        android:layout_toRightOf="@id/progress_bar_chart"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_dashboard_liked_videos"
            android:textSize="12dp"
            android:layout_weight="1"
            android:text="Liked Videos"
            ></Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/Community_dashboard"
            android:textSize="12dp"
            android:layout_weight="1"
            android:text="Community"
            ></Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/certificates_dashboard"
            android:textSize="11dp"
            android:layout_weight="1"
            android:text="Certificates"
            ></Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/approve_videos_dashboard"
            android:textSize="12dp"
            android:layout_weight="1"
            android:text="Approve Videos"
            ></Button>


    </LinearLayout>


</RelativeLayout>