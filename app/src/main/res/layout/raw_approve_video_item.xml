<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/routine_thumbnail"
        android:src="@color/Smurfogreen"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toRightOf="@id/routine_thumbnail"
        android:id="@+id/routine_title"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:inputType="numberSigned"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/routine_title_notification"></TextView>

</RelativeLayout>