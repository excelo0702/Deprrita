<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/border"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_play_circle_filled_24"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:id="@+id/pause"></ImageView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@id/pause"
        android:padding="10dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:id="@+id/routine_sectionNo"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@id/routine_sectionNo"
        android:padding="10dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/routine_description"></TextView>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_plus"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:id="@+id/maximize"></ImageView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/minus"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:id="@+id/minimize"></ImageView>




</RelativeLayout>