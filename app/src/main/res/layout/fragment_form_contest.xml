<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".category_view.Contest.form_contest"
    android:background="#FFFFFF"

    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contest Name"
        android:id="@+id/contest_name"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        ></TextView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contest Name"
        android:id="@+id/contest_quote"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        ></TextView>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/form_contest_videoView"
        ></VideoView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Video"
        android:id="@+id/choose_video_form"
        ></Button>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/userName"
        android:hint="Name"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/userEmail"
        android:hint="Email"
        ></EditText>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#000000"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FFFFFF"
            android:text="Register"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/register"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp">
        </TextView>



    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:id="@+id/progress_bar_upload_contest_video"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:progress="0"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/contest_description"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:id="@+id/image_1_contest"

        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/image_2_contest"
        ></ImageView>

</LinearLayout>
</ScrollView>