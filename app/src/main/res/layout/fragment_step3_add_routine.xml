<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".category_view.Courses.Step3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/upload_routine_image"
        android:src="@mipmap/ic_launcher_round"></ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_thumbnail_step3_routine"
        android:layout_marginRight="15dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_baseline_edit_24"
        >

    </ImageView>


    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/category_spinnerr_routine"
        android:layout_toRightOf="@id/upload_routine_image"
        android:layout_below="@id/upload_routine_image" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Song Name"
        android:layout_below="@id/category_spinnerr_routine"
        android:id="@+id/routine_name_step3"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="What you'll learn !! (write in points)"
        android:layout_below="@id/routine_name_step3"
        android:id="@+id/learn_routine">

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Routine Description"
        android:layout_below="@id/learn_routine"
        android:id="@+id/learn_routine_description">

    </EditText>


    <ProgressBar
        android:id="@+id/progress_bar_create_routine"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/learn_routine_description"
        android:layout_margin="10dp"
        android:progress="0"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_below="@id/progress_bar_create_routine"
        android:textColor="@color/black"
        android:text="Create Course"
        android:id="@+id/create_routine"
        ></Button>
    </LinearLayout>

</ScrollView>