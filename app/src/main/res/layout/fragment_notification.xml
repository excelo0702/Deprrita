<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/notification_text"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_text"
            android:layout_margin="10dp"
            android:id="@+id/recycler_notification_global"
            ></androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peronal Notification "
                    android:textSize="20dp"
                    android:layout_below="@id/recycler_notification_global"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:id="@+id/ttt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/ttt"
                    android:id="@+id/recycler_notification_personal"
                    ></androidx.recyclerview.widget.RecyclerView>



        </RelativeLayout>




</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>